<?xml version="1.0" encoding="UTF-8"?>
<precice-configuration>
  <!-- Removed <solver-interface> wrapper and moved its children up -->

  <!-- Scalar data definitions -->
  <data:scalar name="Temperature"/>
  <data:scalar name="Heat-Flux"/>

  <!-- Added dimensions="3" to mesh definitions -->
  <mesh name="Fluid-Mesh" dimensions="3">
    <use-data name="Temperature"/>
    <use-data name="Heat-Flux"/>
  </mesh>

  <mesh name="Solid-Mesh" dimensions="3">
    <use-data name="Temperature"/>
    <use-data name="Heat-Flux"/>
  </mesh>

  <participant name="Fluid">
    <!-- Replaced use-mesh with provide/receive syntax and removed timing from mapping -->
    <provide-mesh name="Fluid-Mesh"/>
    <receive-mesh name="Solid-Mesh" from="Solid"/>
    <read-data name="Heat-Flux" mesh="Fluid-Mesh"/>
    <write-data name="Temperature" mesh="Fluid-Mesh"/>
    <mapping:nearest-neighbor 
         direction="read" 
         from="Solid-Mesh" 
         to="Fluid-Mesh" 
         constraint="consistent"/>
  </participant>

  <participant name="Solid">
    <receive-mesh name="Fluid-Mesh" from="Fluid"/>
    <provide-mesh name="Solid-Mesh"/>
    <read-data name="Temperature" mesh="Solid-Mesh"/>
    <write-data name="Heat-Flux" mesh="Solid-Mesh"/>
    <mapping:nearest-neighbor 
         direction="read" 
         from="Fluid-Mesh" 
         to="Solid-Mesh" 
         constraint="consistent"/>
  </participant>

  <!-- Updated m2n:sockets attributes -->
  <m2n:sockets acceptor="Fluid" connector="Solid" exchange-directory="../"/>

  <coupling-scheme:parallel-implicit>
    <!-- Renamed timestep-length to time-window-size and max-timesteps to max-time-windows -->
    <time-window-size value="0.01"/>
    <max-time-windows value="20"/>
    <max-iterations value="30"/>
    <participants first="Fluid" second="Solid"/>
    <exchange data="Temperature" mesh="Fluid-Mesh" from="Fluid" to="Solid" initialize="true"/>
    <exchange data="Heat-Flux" mesh="Solid-Mesh" from="Solid" to="Fluid"/>
    <relative-convergence-measure limit="1.0e-4" data="Temperature" mesh="Fluid-Mesh"/>
    <relative-convergence-measure limit="1.0e-4" data="Heat-Flux" mesh="Solid-Mesh"/>
    <!-- Removed unsupported extrapolation-order -->

    <!-- Renamed <post-processing:IQN-ILS> to <acceleration:IQN-ILS> and updated child elements -->
    <acceleration:IQN-ILS>
      <data mesh="Solid-Mesh" name="Heat-Flux"/>
      <data mesh="Fluid-Mesh" name="Temperature"/>
      <preconditioner type="residual-sum"/>
      <initial-relaxation value="0.01"/>
      <max-used-iterations value="50"/>
      <!-- Changed timesteps-reused to time-windows-reused -->
      <time-windows-reused value="10"/>
      <filter type="QR1" limit="1e-6"/>
    </acceleration:IQN-ILS>
  </coupling-scheme:parallel-implicit>
</precice-configuration>
