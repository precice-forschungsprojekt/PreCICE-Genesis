{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["precice-configuration"],
  "properties": {
    "precice-configuration": {
      "type": "object",
      "properties": {
        "log": {
          "type": "object",
          "properties": {
            "sink": {
              "type": "object",
              "properties": {
                "filter": { "type": "string" },
                "format": { "type": "string" },
                "enabled": { "type": "boolean" }
              }
            }
          }
        },
        "data:vector": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["@name"],
            "properties": {
              "@name": { "type": "string" }
            }
          }
        },
        "mesh": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/meshItem"
              }
            },
            {
              "$ref": "#/definitions/meshItem"
            }
          ]
        },
        "participant": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["@name"],
            "properties": {
              "@name": { "type": "string" },
              "provide-mesh": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["@name"],
                  "properties": {
                    "@name": { "type": "string" }
                  }
                }
              },
              "receive-mesh": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["@name", "@from"],
                  "properties": {
                    "@name": { "type": "string" },
                    "@from": { "type": "string" }
                  }
                }
              },
              "read-data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["@name", "@mesh"],
                  "properties": {
                    "@name": { "type": "string" },
                    "@mesh": { "type": "string" }
                  }
                }
              },
              "write-data": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["@name", "@mesh"],
                  "properties": {
                    "@name": { "type": "string" },
                    "@mesh": { "type": "string" }
                  }
                }
              },
              "mapping:rbf": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["@direction", "@from", "@to", "@constraint"],
                  "properties": {
                    "@direction": { "type": "string", "enum": ["read", "write"] },
                    "@from": { "type": "string" },
                    "@to": { "type": "string" },
                    "@constraint": { "type": "string", "enum": ["consistent", "conservative"] },
                    "basis-function:thin-plate-splines": {
                      "type": ["object", "null"]
                    }
                  }
                }
              },
              "watch-point": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["@mesh", "@name", "@coordinate"],
                  "properties": {
                    "@mesh": { "type": "string" },
                    "@name": { "type": "string" },
                    "@coordinate": { "type": "string" }
                  }
                }
              },
              "export:vtk": {
                "type": "object",
                "properties": {
                  "@directory": { "type": "string" }
                }
              }
            }
          }
        },
        "m2n:sockets": {
          "oneOf": [
            {
              "type": "array",
              "items": {
                "$ref": "#/definitions/m2nSocketItem"
              }
            },
            {
              "$ref": "#/definitions/m2nSocketItem"
            }
          ]
        },
        "coupling-scheme:serial-explicit": {
          "type": "object",
          "required": ["time-window-size", "participants", "exchange"],
          "properties": {
            "time-window-size": {
              "type": "object",
              "required": ["@value"],
              "properties": {
                "@value": { "type": "string" }
              }
            },
            "max-time": {
              "type": "object",
              "required": ["@value"],
              "properties": {
                "@value": { "type": "string" }
              }
            },
            "participants": {
              "type": "object",
              "required": ["@first", "@second"],
              "properties": {
                "@first": { "type": "string" },
                "@second": { "type": "string" }
              }
            },
            "exchange": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["@data", "@mesh", "@from", "@to"],
                "properties": {
                  "@data": { "type": "string" },
                  "@mesh": { "type": "string" },
                  "@from": { "type": "string" },
                  "@to": { "type": "string" }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "meshItem": {
      "type": "object",
      "required": ["@name", "@dimensions"],
      "properties": {
        "@name": { "type": "string" },
        "@dimensions": { "type": "string", "pattern": "^[1-3]$" },
        "use-data": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["@name"],
            "properties": {
              "@name": { "type": "string" }
            }
          }
        }
      }
    },
    "m2nSocketItem": {
      "type": "object",
      "required": ["@acceptor", "@connector"],
      "properties": {
        "@acceptor": { "type": "string" },
        "@connector": { "type": "string" },
        "@exchange-directory": { "type": "string" }
      }
    }
  }
}
